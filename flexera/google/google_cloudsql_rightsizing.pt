name "Google Rightsize CloudSQL Instances"
rs_pt_ver 20180301
type "policy"
short_description "A mock policy that mocks checking Google CloudSQL instances based on provided CPU threshold and Resize them after approval. See the [README](https://github.com/flexera/policy_templates/tree/master/cost/google/cloudsql_rightsizing/) and [docs.flexera.com/flexera/EN/Automation](https://docs.flexera.com/flexera/EN/Automation/AutomationGS.htm) to learn more."
long_description ""
severity "medium"
category "Cost"
default_frequency "daily"
info(
      version: "0.1",
      provider: "GCE",
      service: "SQL",
      policy_set: "Rightsize Database Services"
    )

###############################################################################
# Parameters
###############################################################################

parameter "param_email" do
  type "list"
  label "Email addresses to notify"
  description "Email addresses of the recipients you wish to notify when new incidents are created"
end

parameter "param_avg_cpu_upscale" do
  type "number"
  label "Average used CPU % - Upscale threshold"
  description "Set to -1 to ignore CPU utilization"
  default 80
  min_value -1
  max_value 100
end

parameter "param_avg_cpu_downscale" do
  type "number"
  label "Average used CPU % - Downscale Threshold"
  description "Set to -1 to ignore CPU utilization"
  default 60
  min_value -1
  max_value 100
end

parameter "param_exclusion_tag_key" do
  category "User Inputs"
  label "Exclusion Label Key:Value"
  description "Cloud native label to ignore instances. Format: Key:Value"
  type "string"
  allowed_pattern /(^$)|([\w]?)+\:([\w]?)+/
end

parameter "param_automatic_action" do
  type "list"
  label "Automatic Actions"
  description "When this value is set, this policy will automatically take the selected action(s)"
  allowed_values ["Resize Instances"]
end

parameter "param_log_to_cm_audit_entries" do
  type "string"
  label "Log to CM Audit Entries"
  description "Boolean for whether or not to log any debugging information from actions to CM Audit Entries, this should be left set to No on Flexera EU"
  default "No"
  allowed_values "Yes", "No"
end

###############################################################################
# Datasources
###############################################################################

datasource "ds_google_instance_map" do
  request do
    verb "GET"
    host "raw.githubusercontent.com"
    path "/flexera-public/optima-tools/IND-5228_Mocks_Update/flexera/data/google/google_cloudsql_rightsizing.json"
    header "User-Agent", "RS Policies"
  end
end

datasource "ds_checked_utilization" do
  run_script $js_checked_utilization, $ds_google_instance_map, $param_avg_cpu_upscale, $param_avg_cpu_downscale, $param_exclusion_tag_key
end

###############################################################################
# Scripts
###############################################################################

script "js_checked_utilization", type: "javascript" do
  result "result"
  parameters "ds_google_instance_map", "param_avg_cpu_upscale", "param_avg_cpu_downscale", "param_exclusion_tag_key"
  code <<-EOS
  var result = []
  var is_tag_matched = false

  _.each(ds_google_instance_map.values, function(instance){
    for(var k=0;k<param_exclusion_tag_key.length;k++){
      if(_.has(instance.userLables, param_exclusion_tag_key[k])){
        is_tag_matched=true
      }
    }
    if (!is_tag_matched) {
      if (param_avg_cpu_downscale === -1 && param_avg_cpu_upscale === -1){
        result.push(instance)
      } else {
         function getRandomInboundNumber(upper, lower, decimal) {
          var num = Math.floor(Math.random() * (upper - lower) + lower)
          if (decimal) {
            var numFigs = Math.floor(Math.random() * (100))/100
            return num + numFigs;
          }
          return num
        }
        if (param_avg_cpu_upscale === -1) {
          param_avg_cpu_upscale = 100
        }
        if (param_avg_cpu_downscale === -1) {
          param_avg_cpu_downscale = 0
        }
        instance.cpu_average = getRandomInboundNumber(param_avg_cpu_upscale, param_avg_cpu_downscale, true)
        instance.cpu_minimum = getRandomInboundNumber(instance.cpu_average, param_avg_cpu_downscale, true)
        instance.cpu_maximum = getRandomInboundNumber(param_avg_cpu_upscale, instance.cpu_average, true)
        result.push(instance)
      }
    }
  })
  result = _.sortBy(result,"zone");
  result = _.sortBy(result,"projectId");
  EOS
end
###############################################################################
# Policy
###############################################################################

policy "pol_utilization" do
  validate_each $ds_checked_utilization do
    summary_template "{{ rs_project_name }} (Account ID: {{ rs_project_id }}): {{ len data }} rows containing Google CloudSQL instances to be rightsized"
    check logic_not(val(item,"recommended_size"))
    escalate $email
    export do
      resource_level true
      field "projectId" do
        label "Project ID"
      end
      field "id" do
        label "Database ID"
        path "database_id"
      end
      field "zone" do
        label "Zone"
      end
      field "pricingPlan" do
        label "Pricing Plan"
      end
      field "tier" do
        label "Tier"
      end
      field "recommended_size" do
        label "Recommended Tier"
      end
      field "cpu_maximum" do
        label "CPU Maximum %"
      end
      field "cpu_minimum" do
        label "CPU Minimum %"
      end
      field "cpu_average" do
        label "CPU Average %"
      end
      field "userLabels" do
        label "Tags"
      end
      field "selfLink" do
        label "Self Link"
      end
    end
  end
end


###############################################################################
# Escalations
###############################################################################

escalation "email" do
  automatic true
  label "Send Email"
  description "Send incident email"
  email $param_email
end
